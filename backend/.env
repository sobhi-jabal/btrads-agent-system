# BT-RADS Agent System Configuration

# Database
DATABASE_URL=postgresql://postgres:password@localhost/btrads_db
REDIS_URL=redis://localhost:6379

# Agent Mode (mock, vllm, ollama)
AGENT_MODE=vllm

# Orchestrator Mode (simple, langgraph)
ORCHESTRATOR_MODE=langgraph

# vLLM Configuration
VLLM_BASE_URL=http://localhost:8000
VLLM_API_KEY=
VLLM_TIMEOUT=120
VLLM_MAX_RETRIES=3

# Ollama Configuration (fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi4:14b

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
ENABLE_TELEMETRY=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Validation Mode
DEFAULT_VALIDATION_MODE=auto  # auto or manual